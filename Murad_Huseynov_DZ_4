workers = ['инженер-конструктор Игорь', 'главный бухгалтер МАРИНА', 'токарь высшего разряда нИКОЛАй', 'директор аэлита']

list_1 = " ".join(workers) #делает список строкой
word = list_1.split() #каждое слово через пробел превращает в строку

print("Привет, ", word[1], "!")
print("Привет, ", word[4].capitalize(), "!")
print("Привет, ", word[8].capitalize(), "!")
print("Привет, ", word[10].capitalize(), "!")
